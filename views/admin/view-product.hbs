<section>
    <div class="row">
        <a href="/admin/add-product" class="btn btn-success">add product</a><br><br>
        <a href="/" class="btn btn-success">user panel</a>
    </div>
    <div class="container mt-5">
        <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">name</th>
      <th scope="col">discription</th>
      <th scope='col'>price</th>
      <th scope='col'>category</th>
      <th scope="col">image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">#</th>
      <td>{{this.name}}</td>
      <td>{{this.discription}}</td>
      <td>{{this.price}}</td>
      <td>{{this.category}}</td>
      <td><img src="{{this.image}}" alt="pipoop"></td>
      <td><a class="btn btn-primary" href="/admin/edit-product/{{this._id}}">edit</a>
      <a class="btn btn-danger" href="/admin/delete-product/{{this._id}}" onclick="return confirm('are you want to delete {{this.name}} ?')">delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>